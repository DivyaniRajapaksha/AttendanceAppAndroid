<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InstituteProfile"
    android:orientation="vertical">


        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/institute_details"
               android:textSize="30sp"
               android:padding="15dp"
               android:layout_gravity="center">

           </TextView>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ins"
                android:layout_gravity="center"
                android:id="@+id/InstituteImage">

            </ImageView>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:padding="20dp"
                android:gravity="center"

                tools:context=".EditorActivity">

                <!-- Overview category -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Label -->
                    <TextView
                        android:text="@string/name77486"
                        style="@style/CategoryStyle"
                        />

                    <!-- Input fields -->
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:paddingLeft="4dp"
                        android:orientation="vertical">

                        <!-- Name field -->
                        <EditText
                            android:id="@+id/editInsName"

                            android:inputType="text"
                            style="@style/EditorFieldStyle"
                            android:visibility="gone"/>

                        <TextView
                            style="@style/EditorUnitsStyle"
                            android:id="@+id/InsName"
                            android:text="SASIP">

                        </TextView>



                        <!-- Breed field -->
                    </LinearLayout>
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Label -->
                    <TextView
                        android:text="@string/institute_managerPro"
                        style="@style/CategoryStyle"
                        />

                    <!-- Input fields -->
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:paddingLeft="4dp"
                        android:orientation="vertical">

                        <!-- Name field -->
                        <EditText
                            android:id="@+id/editInsMng"

                            android:inputType="text"
                            style="@style/EditorFieldStyle"
                            android:visibility="gone"/>

                        <TextView
                            style="@style/EditorUnitsStyle"
                            android:id="@+id/InsMag"
                            android:text="Kamal">

                        </TextView>



                        <!-- Breed field -->
                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Label -->
                    <TextView
                        android:text="@string/password"
                        style="@style/CategoryStyle"
                        />

                    <!-- Input fields -->
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:paddingLeft="4dp"
                        android:orientation="vertical">

                        <!-- Name field -->
                        <EditText
                            android:id="@+id/editPassword"

                            android:inputType="text"
                            style="@style/EditorFieldStyle"
                            android:visibility="gone"/>

                        <TextView
                            style="@style/EditorUnitsStyle"
                            android:id="@+id/InsPassword"
                            android:text="01123">

                        </TextView>



                        <!-- Breed field -->
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Label -->
                    <TextView
                        android:text="@string/address"
                        style="@style/CategoryStyle"
                        />

                    <!-- Input fields -->
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:paddingLeft="4dp"
                        android:orientation="vertical">

                        <!-- Name field -->
                        <EditText
                            android:id="@+id/editAddr"

                            android:inputType="text"
                            style="@style/EditorFieldStyle"
                            android:visibility="gone"/>

                        <TextView
                            style="@style/EditorUnitsStyle"
                            android:id="@+id/InsAddr"
                            android:text="SASIP">

                        </TextView>



                        <!-- Breed field -->
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Label -->
                    <TextView
                        android:text="@string/website"
                        style="@style/CategoryStyle"
                        />

                    <!-- Input fields -->
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:paddingLeft="4dp"
                        android:orientation="vertical">

                        <!-- Name field -->

                        <EditText
                            android:id="@+id/editWeb"

                            android:inputType="text"
                            style="@style/EditorFieldStyle"
                            android:visibility="gone"/>
                        <TextView
                            style="@style/EditorUnitsStyle"
                            android:id="@+id/InsWeb"
                            android:text="www.SASIP">

                        </TextView>



                        <!-- Breed field -->
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Label -->
                    <TextView
                        android:text="@string/email"
                        style="@style/CategoryStyle"
                        />

                    <!-- Input fields -->
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:paddingLeft="4dp"
                        android:orientation="vertical">

                        <!-- Name field -->


                        <TextView
                            style="@style/EditorUnitsStyle"
                            android:id="@+id/InsEmail"
                            android:text="234@gmail">

                        </TextView>



                        <!-- Breed field -->
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Label -->
                    <TextView
                        android:text="@string/hotline"
                        style="@style/CategoryStyle"
                        />

                    <!-- Input fields -->
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:paddingLeft="4dp"
                        android:orientation="vertical">

                        <!-- Name field -->

                        <EditText
                            android:id="@+id/editHotL"

                            android:inputType="text"
                            style="@style/EditorFieldStyle"
                            android:visibility="gone"/>

                        <TextView
                            style="@style/EditorUnitsStyle"
                            android:id="@+id/InsHotL"
                            android:text="001256">

                        </TextView>



                        <!-- Breed field -->
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Label -->
                    <TextView
                        android:text="@string/description"
                        style="@style/CategoryStyle"
                        />

                    <!-- Input fields -->
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:paddingLeft="4dp"
                        android:orientation="vertical">

                        <!-- Name field -->

                        <EditText
                            android:id="@+id/editDesc"

                            android:inputType="text"
                            style="@style/EditorFieldStyle"
                            android:visibility="gone"/>
                        <TextView
                            style="@style/EditorUnitsStyle"
                            android:id="@+id/InsDesc"
                            android:text="SASIP">

                        </TextView>



                        <!-- Breed field -->
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="103dp"
                android:gravity="center">

                <Button
                    android:id="@+id/InsProfEdit"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_rounded"
                    android:text="@string/edit_details"
                    android:textColor="#FFFF" />

                <Button
                    android:id="@+id/InsProfSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_rounded"
                    android:text="@string/save"
                    android:textColor="#FFFF"
                    android:visibility="gone" />
            </LinearLayout>




        </LinearLayout>


    </RelativeLayout>

</LinearLayout></ScrollView>