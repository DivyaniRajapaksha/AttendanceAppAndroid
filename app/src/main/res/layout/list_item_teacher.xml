<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:drawSelectorOnTop="true"
    android:id="@+id/Rel"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="22dp"

                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_person_pin_black_24dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"



                    android:layout_alignParentTop="true"
                    android:text="Priyanka"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:id="@+id/ListTName"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"


                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/listsub"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"




                        android:text="Subject"
                        android:textSize="15dp"
                        android:layout_marginLeft="10dp"

                        android:id="@+id/ListSub"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    >



                    <ImageView
                        android:id="@+id/image7"
                        android:layout_width="24dp"
                        android:layout_height="24dp"

                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"


                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/ic_local_phone_black_24dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"




                        android:text="Tel"
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"

                        android:id="@+id/ListSTel"/>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    >

                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"


                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/ic_email_black_24dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"




                        android:text="Email"
                        android:textSize="13dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"

                        android:id="@+id/ListEmail"/>





                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    >

                    <ImageView
                        android:id="@+id/image10"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"


                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/adddfr"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"




                        android:text="Address"
                        android:textSize="13dp"
                        android:layout_marginLeft="10dp"


                        android:id="@+id/ListAddress"/>





                </LinearLayout>











            </LinearLayout>




        </LinearLayout>





    </LinearLayout>














</RelativeLayout>
